<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dict_item_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="8dp"
              android:weightSum="1"
            >

    <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" android:paddingLeft="10dp"
                  android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:id="@+id/word_first" android:textSize="16sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorAccent"
                android:id="@+id/word_second" android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>